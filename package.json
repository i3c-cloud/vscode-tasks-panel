{
    "name": "task-panel",
    "displayName": "Tasks Panel",
    "description": "List of tasks",
    "version": "0.1.0",
    "publisher": "BitLaboratory",
    "license": "MIT",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "tasks",
        "gulp",
        "grunt"
    ],
    "activationEvents": [
        "onView:bitlab-vscode.taskpanel"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
			"explorer": [
				{
					"id": "bitlab-vscode.taskpanel",
                    "name": "Tasks"
				}
			]
        },
        "commands": [
            {
                "command": "bitlab-vscode.taskpanel.refresh",
                "title": "Refresh",
                "icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
                },
                "category": "TaskPanel"
            },
			{
				"command": "bitlab-vscode.taskpanel.execute",
				"title": "Execute Task",
				"icon": {
					"light": "resources/light/execute.svg",
					"dark": "resources/dark/execute.svg"
                },
                "category": "TaskPanel"
            },
			{
				"command": "bitlab-vscode.taskpanel.terminate",
				"title": "Terminate Task",
				"icon": {
					"light": "resources/light/terminate.svg",
					"dark": "resources/dark/terminate.svg"
                },
                "category": "TaskPanel"
			}
        ],
        "menus": {
			"view/title": [
				{
					"command": "bitlab-vscode.taskpanel.execute",
					"when": "view == bitlab-vscode.taskpanel",
					"group": "navigation@1"
                },
                {
                    "command": "bitlab-vscode.taskpanel.terminate",
                    "when": "view == bitlab-vscode.taskpanel",
                    "group": "navigation@2"
                },
                {
                    "command": "bitlab-vscode.taskpanel.refresh",
                    "when": "view == bitlab-vscode.taskpanel",
                    "group": "navigation@4"
                }
            ],
            "view/item/context": [
                {
                    "command": "bitlab-vscode.taskpanel.execute",
                    "when": "view == bitlab-vscode.taskpanel && viewItem == item",
                    "group": "execute"
                },
                {
                    "command": "bitlab-vscode.taskpanel.terminate",
                    "when": "view == bitlab-vscode.taskpanel && viewItem == item",
                    "group": "execute"
                },
                {
                    "command": "bitlab-vscode.taskpanel.refresh",
                    "when": "view == bitlab-vscode.taskpanel"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
